{
  "name": "astro-theme-retypeset",
  "type": "module",
  "version": "1.0.0",
  "repository": "https://github.com/radishzzz/astro-theme-retypeset",
  "scripts": {
    "dev": "pnpm run memos && astro check && astro dev",
    "build": "pnpm run memos && astro check && astro build && pnpm run apply-lqip && pnpm run pagefind",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "new-post": "tsx scripts/new-post.ts",
    "apply-lqip": "tsx scripts/apply-lqip.ts",
    "format-posts": "tsx scripts/format-posts.ts",
    "generate-lqip": "tsx scripts/generate-lqip.ts",
    "update-theme": "tsx scripts/update-theme.ts",
    "update-vendors": "curl -L https://unpkg.com/@waline/client@latest/dist/waline.css -o public/vendors/waline/waline.css && curl -L https://unpkg.com/@waline/client@latest/dist/waline.js -o public/vendors/waline/waline.js",
    "pagefind": "pagefind --site dist",
    "memos": "node scripts/memos.js"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.12",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/sitemap": "^3.6.0",
    "@waline/client": "^3.8.0",
    "astro": "^5.16.2",
    "astro-compress": "^2.3.8",
    "astro-og-canvas": "^0.7.2",
    "canvaskit-wasm": "^0.40.0",
    "dotenv": "^16.5.0",
    "feed": "^5.1.0",
    "googleapis": "^150.0.1",
    "gsap": "^3.13.0",
    "katex": "^0.16.25",
    "lite-youtube-embed": "^0.3.4",
    "markdown-it": "^14.1.0",
    "marked": "^15.0.12",
    "mdast-util-to-string": "^4.0.0",
    "mermaid": "^11.12.1",
    "node-fetch": "^3.3.2",
    "node-html-parser": "^7.0.1",
    "openai": "^5.1.0",
    "pagefind": "^1.3.0",
    "photoswipe": "^5.4.4",
    "playwright": "^1.56.1",
    "reading-time": "^1.5.0",
    "rehype-katex": "^7.0.1",
    "rehype-mermaid": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-directive": "^4.0.0",
    "remark-math": "^6.0.0",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "twikoo": "^1.6.44",
    "unist-util-visit": "^5.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@astrojs/check": "^0.9.6",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.10.1",
    "@types/sanitize-html": "^2.16.0",
    "@unocss/eslint-plugin": "66.5.9",
    "@unocss/preset-attributify": "66.5.9",
    "@unocss/reset": "66.5.9",
    "astro-eslint-parser": "^1.2.2",
    "autocorrect-node": "^2.14.0",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "fast-glob": "^3.3.3",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "sass-embedded": "^1.89.1",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "unocss": "66.5.9",
    "unocss-preset-theme": "^0.14.1"
  },
  "pnpm": {
    "patchedDependencies": {
      "@qwik.dev/partytown@0.11.2": "patches/@qwik.dev__partytown@0.11.2.patch"
    },
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,mjs,ts,astro}": "eslint --fix"
  }
}
